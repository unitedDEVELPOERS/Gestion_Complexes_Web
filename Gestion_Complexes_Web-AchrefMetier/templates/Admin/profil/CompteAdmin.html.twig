{% extends'Admin/index.html.twig' %}
{% block title %} Utilisateur
{% endblock %}
{% block body %}

    <body class="">
    {% for message in app.flashes('success') %}
        <div class="alert alert-success mt-2">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('danger') %}
        <div class="alert alert-danger mt-2">
            {{ message }}
        </div>
    {% endfor %}
    <h1>Liste des utilisateur</h1>
    <div class="float-right" style="margin-right: 90px">

    </div><br>
    <form role="form" class="form-horizontal">

        <div class="form-group">
            <label class="col-lg-2 control-label"> EMAIL</label>
            <div class="col-lg-6">
                {{ Utilisateur.email }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> NOM</label>
            <div class="col-lg-6">
               {{ Utilisateur.nom }}

            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> PRENOM</label>
            <div class="col-lg-6">

               {{ Utilisateur.prenom }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> TELEPHONE</label>
            <div class="col-lg-6">
               {{ Utilisateur.telephone }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> POSITION</label>
            <div class="col-lg-6">
                {{ Utilisateur.position }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> Equipe</label>
            <div class="col-lg-6">
                {{ Utilisateur.equipe }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> PositionEquipe</label>
            <div class="col-lg-6">
                {{ Utilisateur.positionEquipe }}
            </div>
        </div>
        <div class="form-group">
            <label class="col-lg-2 control-label"> Categorie</label>
            <div class="col-lg-6">
                {{ Utilisateur.categorie }}
            </div>
        </div>
    </form>


        <tr>

            <td><a href="{{ path('updateAdmin',{'id':Utilisateur.id}) }}"> Update</a> </td>
            <td><a href="{{ path('CompteAdmin')}}"> Cancel</a> </td>

        </tr>



    </body>
{% endblock %}