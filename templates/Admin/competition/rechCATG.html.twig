{% extends 'index.html.twig' %}
{% block title%} Liste des Articles par Catégorie{% endblock %}
{% block body %}
    {{ form_start(form) }}
    <div class="form-row align-items-end" >
        <div class="col">
            {{ form_row(form.category) }}
        </div>
        <div class="col">
            <div class="form-group">
                <button type="submit" class="btn btn-success">Rechercher</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
    {% if c %}
        <table id="articles" class="table table-striped">
            <thead>
            <tr>
                <th>Nom</th>

                <th>Prix</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for c in Competition %}
                <tr>
                    <td>{{ Competition.designation }}</td>
                    <td>{{ Competition.prixParticipation }}</td>
                    <td>{{ Competition.categorie.getDesignation() }}</td>
                    <td>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        <p>Aucun articles</p>
    {% endif %}
{% endblock %}