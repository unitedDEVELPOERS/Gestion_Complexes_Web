{% extends 'Admin/index.html.twig' %}

{% block body %}
<h1>Liste des produits</h1>
<div class="float-right" style="margin-right: 90px">
    <a href="{{ path('produit_new') }}" class="btn btn-primary"> Nouveau produit</a>
</div><br>
    <table class="table table-striped table-advance table-hover">
        <h4><i class="fa fa-angle-right">

            </i> </h4>
        <hr>
        <thead>
        <tr>

            <th>Name</th>
            <th>Reference</th>
            <th align="center">Image</th>
            <th>Price</th>
            <th>Quantite</th>



        </tr>
        </thead>
        <tbody>

        <tr {% for p in produits %}  >
            <td>{{ p.name }}</td>
            <td>{{ p.reference }}</td>

            <td align="center" ><img src="{{ asset( p.image ) }}" style="width: 50px; border-radius: 10%"></td>
            <td>{{ p.price }}</td>
            <td>{{ p.quantite}}</td>




            <td style=" width: 150px">
                <a href="{{ path('produit_show', {'id': p.id}) }}" class='btn btn-ghost-primary' ><i class="fa fa-eye"></i></a>

                <a href="{{ path('produit_edit', {'id': p.id}) }}" class='btn btn-ghost-success' ><i class="fa fa-edit"></i></a>

                    <a method="post" action="{{ path ('produit_delete', {id: p.id}) }}"  onsubmit="return confirm('êtes vous sûr de supprimer ce produit ? ')">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                    <button class="btn btn-danger btn-xs"><i class="fa fa-trash-o "></i></button>
                 </a>

            </td>


        </tr {% endfor %} >

        </tbody>
    </table>
    </div>
    <!-- /content-panel -->
    </div>
    <!-- /col-md-12 -->
    </div>
    <!-- /row -->
    </section>
    </section>
    <!-- /MAIN CONTENT -->
    <!--main content end-->

{% endblock %}
