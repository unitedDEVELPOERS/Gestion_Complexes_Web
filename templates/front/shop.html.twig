{% extends'front/base.html.twig' %}
{% block title %} shop
{% endblock %}
{% block body %}  <!--// Sub Header //-->
    <div class="kode-subheader subheader-height">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1>Shop</h1>
                </div>
                <div class="col-md-6">
                    <ul class="kode-breadcrumb">
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <!--// Sub Header //-->

    <!--// Main Content //-->
    <div class="kode-content">

        <!--// Page Content //-->
        <section class="kode-pagesection padding-bottom-18-flat">
            <div class="container">
                <li class="row">

                    <div class="col-md-12">
                        <div class="kode-shop-list">

                            <ul class="row">
                                {% for product in produits %}
                                <li class="col-md-3 col-sm-6">
                                    <div class="kode-pro-inner">
                                        <figure><a href="#"><img src="{{ asset( product.image ) }}" alt=""></a></figure>
                                        <figcaption>
                                            <h4><a href="#">{{  product.name }}</a></h4>

                                        </figcaption>
                                        </figure>
                                        <div class="kode-pro-info">
                                            <a href="{{path("cart_add", {id: product.id})}}" class="btn btn-success">
                                                <i class="bi bi-cart-plus"></i> Ajouter
                                            </a>
                                            <span>{{  product.price }} TND</span>
                                        </div>
                                    </div>
                                </li>

                                {% endfor %}
                            </ul>

                        </div>
                        <!--// Pagination //-->
                        <div class="pagination">
                            <a href="#"><i class="fa fa-angle-double-left"></i></a>
                            <a href="#">1</a>
                            <a href="#">2</a>
                            <a href="#">2</a>
                            <a href="#">4</a>
                            <a href="#"><i class="fa fa-angle-double-right"></i></a>
                        </div>
                        <!--// Pagination //-->
                    </div>

                </div>
        </section>
        <!--// Page Content //-->

    </div>
    <!--// Main Content //-->

    <!--// NewsLatter //-->
    <div class="kode-newslatter kode-bg-color" >
        <span class="kode-halfbg thbg-color"></span>
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h3>Subcribe Our Monthly Newsletter</h3>
                </div>
                <div class="col-md-6">
                    <form>
                        <input type="text" placeholder="Your E-mail Adress" name="s" required>
                        <label><input type="submit" value=""></label>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}